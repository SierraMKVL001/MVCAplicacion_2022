@using MVC_Razor_ADO.Models
@model IEnumerable<Alumno>

@{
    ViewBag.Title = "Create";
}

<h2>Agregar Alumno</h2>

@using (Html.BeginForm())
{
<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-2">
            <label>Nombre</label>
        </div>
        <div class="col-md-10">
            <input class="form-control" id="txbNomAlumno" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">
            <label>Primer Apellido</label>
        </div>
        <div class="col-md-10">
            <input class="form-control" id="txbPrimApell" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <label>Segundo Apellido</label>
        </div>
        <div class="col-md-10">
            <input class="form-control" id="txbSegApell" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <label>Fecha de Nacimiento</label>
        </div>
        <div class="col-md-10">
            <input class="form-control" id="txbFechaNac" type="date" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <label>CURP</label>
        </div>
        <div class="col-md-10">
            <input class="form-control" id="txbCurp" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <label>Correo</label>
        </div>
        <div class="col-md-10">
            <input class="form-control" id="txbCorreo" type="email" placeholder="name@ejemplo.com" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <label>Telefono</label>
        </div>
        <div class="col-md-10">
            <input class="form-control" id="txbTel" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <label>Sueldo</label>
        </div>
        <div class="col-md-10">
            <input class="form-control" id="txbSueldo" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <label>Estado de Origen del Alumno</label>
        </div>
        <div class="col-md-10">
            @Html.DropDownList("idEstado", new SelectList(ViewBag.estados, "id", "nombre"), htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <label>Estatus del Alumno</label>
        </div>
        <div class="col-md-10">
            @Html.DropDownList("idEstatus", new SelectList(ViewBag.estatus, "id", "nombre"), htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <!--asp:Button CssClass="btn btn-default"-->
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <a href="~/Alumnos/index">Regresar a la Lista</a>
        </div>
    </div>
</div>
    
}
